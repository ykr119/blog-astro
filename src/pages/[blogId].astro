---
import Layout from "../layouts/BaseLayoutLower.astro";
import { getBlogs, getBlogDetail } from "../library/microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"], limit: 100 });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<Layout title="My first blog with Astro">
  <main>
    <div class="wrapper">
        <h1 class="title">{blog.title}</h1>
    </div>
    <div class="bg">
        <div class="wrapper">
        <div class="content" set:html={blog.content}></div>
        <div class="description" set:html={blog.codeArea}></div>

        </div>
    </div>
  </main>
</Layout>

<style>
  main {
    color: black;
  }

  h1 {
    margin-block: 100px;
    color: white;
    font-size: 40px;
    font-weight: bold;
  }

  .bg {
    padding-block: 80px;
    background-color: #fff;
    border-radius: 50px;
  }

  .wrapper {
    max-width: 1000px;
    margin-inline: auto;
    padding-inline: 20px;
  }

  .content {
    margin-bottom: 80px;

    p {
      line-height: 1.75;
      text-decoration: underline;
      text-decoration-color: #ccc;
      text-underline-offset: 5px;
    }

    pre {
      margin-top: 2em;
      padding: 1em 7em 1em 1em;
      color: #fff;
      background-color: #333;
      user-select: none;
      overflow-x: auto;
    }

    div[data-filename] {
      position: relative;
    }

    div[data-filename]::after {
      content: attr(data-filename);
      display: block;
      padding: 0.2em;
      font-size: 10px;
      color: #333;
      background-color: #fff;
      opacity: 0.8;
      position: absolute;
      bottom: 5px;
      right: 5px;
    }
  }
</style>
